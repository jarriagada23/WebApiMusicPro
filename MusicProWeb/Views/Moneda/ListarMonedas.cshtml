@model List<Moneda>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="h5 font-weight-bold text-center mb-3" style="color: #FFFFFF">Listar Monedas</div>
        <div class="card-body">           
            <hr />
            <table style="color: #FFFFFF" class="table table-responsive ">
                <thead>
                    <tr>
                    
                        <th>Codigo</th>
                        <th>Nombre</th>
                        <th>Valor en Peso Chileno </th>                                              
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Codigo</td>
                        <td>@item.Nombre</td>
                        <td>$@item.Valor</td>                                           
                    </tr>

                    }
                </tbody>
            </table>
        </div>