@model List<Producto>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="h5 font-weight-bold text-center mb-3" style="color: #FFFFFF">Catalogo Productos</div>
        <div class="card-body">
            
            
           @foreach (var item in Model){
               <div class="row row-cols-1 row-cols-md-3 g-4">
                   <div class="col">
                       <div class="card">
          <img src="@item.imagen" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">@item.nombre</h5>
            <p class="card-text">@item.marca</p>
            <p class="card-text">$@item.precio</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
               <a href="@Url.Action("ActualizarProducto","Productos",new {id=item.idProducto })" class="btn btn-success  ">Actualizar</a>
                           <a href="@Url.Action("EliminarProducto","Productos",new {id = item.idProducto })" class="btn btn-danger ">Eliminar</a>
                            <a href="@Url.Action("DetalleProducto","Productos",new {id = item.idProducto })" class="btn btn-primary ">Ver Detalles</a>
             
              </div>
               <a href="#" class="btn btn-success">Agregar a carrito</a>
            </div>
          </div>
        </div>
      </div>
                
            
        </div>

}